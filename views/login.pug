doctype html

html
  head
    title Login: My Daily Climb
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="theme-color" content="#000000")
    meta(name="description" content="My Daily Climb: a fitness tracker for rock climbers")
    link(rel="icon" href="%PUBLIC_URL%/favicon.png")
  body
    div
      div(class="title")
        Login
    form(class="login" action="/login" method="POST")
      div(class="inputField")
        label Username:
        input(type="text" name="username" required)
      div(class="inputField")
        label Password:
        input(type="password" name="password" required)
      div(class="inputField")
        input(type="submit" value="Log In")
      div(class="loginMessage")
        |#{loginMessage}

    div(class="title")
      Register
    form(class="register" action="/register" method="POST")
      div(class="inputField")
        label Username:
        input(type="text" name="username" required)
      div(class="inputField")
        label Password:
        input(id="pwd" type="password" name="password" required)
      div(class="inputField")
        label Confirm Password:
        input(id="confirmPwd" type="password" name="ConfirmPassword" required)
      div(class="inputField")
        input(type="submit" value="Register")
      div(class="registerMessage")
        #pug-variable= registerMessage

    form
      div(class="logout" action="/logout")
        button(type="submit")
          Logout


